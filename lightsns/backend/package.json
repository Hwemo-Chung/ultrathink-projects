{
  "name": "lightsns-backend",
  "version": "0.1.0",
  "description": "LightSNS Backend API - Optimized for low-bandwidth networks",
  "main": "src/index.js",
  "scripts": {
    "start": "node src/index.js",
    "dev": "nodemon src/index.js",
    "dev:debug": "nodemon --inspect src/index.js",
    "debug": "node --inspect-brk src/index.js",
    "test": "NODE_ENV=test jest --coverage --verbose",
    "test:watch": "NODE_ENV=test jest --watch",
    "test:unit": "NODE_ENV=test jest __tests__/models --coverage",
    "test:integration": "NODE_ENV=test jest __tests__/integration --coverage",
    "test:ci": "NODE_ENV=test jest --coverage --ci --maxWorkers=2",
    "lint": "eslint src/",
    "migrate": "node scripts/migrate.js"
  },
  "keywords": [
    "lightsns",
    "social-network",
    "low-bandwidth",
    "offline-first"
  ],
  "author": "ULTRATHINK Team",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.0.0",
    "compression": "^1.7.4",
    "dotenv": "^16.3.1",
    "pg": "^8.11.3",
    "redis": "^4.6.10",
    "jsonwebtoken": "^9.0.2",
    "bcrypt": "^5.1.1",
    "multer": "^1.4.5-lts.1",
    "sharp": "^0.32.6",
    "winston": "^3.11.0",
    "express-validator": "^7.0.1",
    "socket.io": "^4.6.2",
    "bull": "^4.11.5"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "eslint": "^8.51.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
